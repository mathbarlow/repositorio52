<p id="notice"><%= notice %></p>

<h1>Universidades</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nit</th>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Localidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% for union in @uniones %>
      <tr>
        <td><%= union.universidad.nit %></td>
        <td><%= union.universidad.nombre %></td>
        <td><%= union.universidad.telefono %></td>
        <td><%= union.universidad.direccion %></td>
        <td><font color="red"><%= union.localidad.nombre %></font></td>
        <td><%= link_to 'Show', union.universidad %></td>
        <td><%= link_to 'Edit', edit_universidad_path(union.universidad) %></td>
        <td><%= link_to 'Destroy', union.universidad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Universidad', new_universidad_path %>
