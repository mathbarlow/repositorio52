<p id="notice"><%= notice %></p>

<h1>Tutores</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cedula</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutores.each do |tutor| %>
      <tr>
        <td><%= tutor.cedula %></td>
        <td><%= tutor.nombre %></td>
        <td><%= tutor.apellido %></td>
        <td><%= tutor.telefono %></td>
        <td><%= tutor.direccion %></td>
        <td><%= link_to 'Show', tutor %></td>
        <td><%= link_to 'Edit', edit_tutor_path(tutor) %></td>
        <td><%= link_to 'Destroy', tutor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Tutor', new_tutor_path %>
